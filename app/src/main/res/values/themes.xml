<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Gwagou_bay" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">@color/broken_white</item>
       <item name="android:button">@style/ButtonStyle</item>


    </style>

    <style name="Theme.Gwagou_bay" parent="Base.Theme.Gwagou_bay" />

    <!-- Creer le composant text par défaut -->
    <style name='DefaultTextStyle'>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <!-- Creer le composant sous-titre par défaut -->
    <style name='SubtitleStyle' parent='DefaultTextStyle'>
        <item name="android:textSize">19sp</item>
    </style>

    <!-- Creer le composant titre par défaut -->
    <style name='TitleStyle' parent='SubtitleStyle'>
        <item name="android:textSize">22sp</item>
            <!-- <item name="android:fontWeight">700</item>  // font weight WIP-->
    </style>

    <style name='ButtonStyle' parent='DefaultTextStyle'>
        <item name='android:textColor' >@color/broken_white</item>
        <item name='android:background'>@color/blue</item>

    </style>

    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">Arial</item>
        <item name="android:textColor">@color/broken_white</item>
    </style>

    <style name="BottomNavigationTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">Arial</item>
        <item name="android:textColor">@color/broken_white</item>
    </style>

</resources>