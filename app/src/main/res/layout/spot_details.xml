<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="20dp">

    <TextView
        android:id="@+id/detail_spot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/item_margin"
        android:text="@string/spot_name"
        style="@style/TitleStyle"
        android:textFontWeight="700"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/item_margin"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/capbreton"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/beige"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/item_margin">

            <TextView
                android:id="@+id/detail_spot_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spot_city"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_gps_coordinates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spot_gps_coordinates"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spot_address"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_informations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/spot_additional_informations"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_gwagou_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gwagou_types"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_peak_period_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peak_surf_season_start"
                style="@style/DefaultTextStyle"/>

            <TextView
                android:id="@+id/detail_spot_peak_period_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peak_surf_season_end"
                style="@style/DefaultTextStyle"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>